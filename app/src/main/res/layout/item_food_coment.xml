<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/coment_grade"
        android:text="5分"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="做过"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/coment_grade"
        android:id="@+id/coment_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="用户名"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:id="@+id/coment_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="内容"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/coment_grade"
        android:layout_centerVertical="true"
        android:id="@+id/coment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="2015.10.10"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/coment_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/coment_datetime"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>