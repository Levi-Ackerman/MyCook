    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/ib_gangtai"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/gangtai" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:scaleType="fitXY"
        android:src="@drawable/neidi" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:scaleType="fitXY"
        android:src="@drawable/guoji" />

</LinearLayout>